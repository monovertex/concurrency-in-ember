<PageTitle>{{@pageTitle}}</PageTitle>

<div class="container mx-auto max-w-md">
  <form id="form-book" {{action (optional @onSave) on="submit"}}>
    <FormField @value={{@model.title}}
      @id="input-title"
      @label="Book Title"
      @placeholder="The Great Gatsby"
      @class="mb-3"
      @required={{true}}
      @disabled={{@isSaving}}/>

    <FormField @value={{@model.author}}
      @id="input-author"
      @label="Author"
      @placeholder="F. Scott Fitzgerald"
      @class="mb-3"
      @required={{true}}
      @disabled={{@isSaving}}/>

    <FormField @value={{@model.publisher}}
      @id="input-publisher"
      @label="Publisher"
      @placeholder="Penguin Random House"
      @class="mb-3"
      @disabled={{@isSaving}}/>

    <FormField @value={{@model.year}}
      @id="input-year"
      @label="Year"
      @placeholder="1922"
      @class="mb-6"
      @disabled={{@isSaving}}/>

    <div class="text-right">
      <FormButton
        @id="button-submit"
        @type="submit"
        @disabled={{@isSaving}}
        @loading={{@isSaving}}>
        ğŸ’¾ Save
      </FormButton>
    </div>
  </form>
</div>
